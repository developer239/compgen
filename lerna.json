{
  "packages": [
    "packages/core/*",
    "packages/micro-generators/*",
    "packages/macro-generators/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org",
      "yes": true
    },
    "version": {
      "conventionalCommits": true,
      "createRelease": "github",
      "yes": true
    }
  }
}
